{
  "compileOnSave": false,
  "compilerOptions": {
    // Where compiled files go
    "outDir": "./dist/out-tsc",
    // "esnext" or "es2020" can help if you need `import type` syntax
    "target": "es2020",  
    "module": "esnext",
    "moduleResolution": "NodeNext", 
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
